<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <!--  集群名称，其他服务会用到，访问hdfs时，可以直接通过这个地址访问，不用管是哪个namenode为active状态  -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://hadoopCluster</value>
        <final>true</final>
    </property>
    <!--  流文建缓冲区大小，单位为KB  -->
    <property>
        <name>io.file.buffer.size</name>
        <value>13107</value>
    </property>
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/data/soft/hadoop-2.8.3/tmp</value>
    </property>
    <!-- ZooKeeper集群的连接地址 -->
    <property>
        <name>ha.zookeeper.quorum</name>
        <value>node01:2181,node02:2181,node03:2181</value>
    </property>
    <!-- 数据压缩编码 -->
    <property>
        <name>io.compression.codecs</name>
        <value>
            org.apache.hadoop.io.compress.GzipCodec,org.apache.hadoop.io.compress.DefaultCodec,org.apache.hadoop.io.compress.SnappyCodec
        </value>
    </property>
    <property>
        <name>fs.trash.interval</name>
        <value>1440</value>
    </property>
    <property>
        <name>fs.trash.checkpoint.interval</name>
        <value>720</value>
    </property>
    <property>
        <name>ha.failover-controller.cli-check.rpc-timeout.ms</name>
        <value>60000</value>
    </property>
    <property>
        <name>ipc.client.connect.timeout</name>
        <value>60000</value>
    </property>
    <property>
        <name>hadoop.proxyuser.root.hosts</name>
        <value>*</value>
    </property>
    <property>
        <name>hadoop.proxyuser.root.groups</name>
        <value>*</value>
    </property>
</configuration>

