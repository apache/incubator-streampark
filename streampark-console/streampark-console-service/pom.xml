                                    <artifactId>streampark-flink-shims_flink-1.13_${scala.binary.version}</artifactId>
                                    <version>${project.version}</version>
                                    <outputDirectory>${project.build.directory}/shims</outputDirectory>
                                </dependency>
                                <!-- flink 1.14 support-->
